@model Models.RealEstate.r_asmc_ms_list_sh.r_asmc_ms_list_shModel

@{
    ViewBag.Title = "査定条件[マンション・マンション名]";
    Layout = "~/Views/Shared/_r_menuLayout.cshtml";
}
@section styles{
    @Styles.Render("~/Content/r_asmc_ms_list_sh")
}

<div class="d-flex flex-column min-vh-100 bg-surface-secondary mt-18" id="wrapper">

    @Html.Partial("r_asmc_ms_list_sh_left_sideNavigation")

    <div class="toggle-button">
        <a href="#menu-toggle" class="btn" id="menu-toggle">
            <span class="fa fa-angle-right glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
    </div>

    <div class="d-flex flex-column min-h-screen bg-surface-secondary" id="page-content-wrapper">
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <div class="card shadow border-0 mb-7">
                    <div class="card-header">
                        <div class="col-md-12 col-12 mb-3 mb-sm-0">
                            <h1 class="h2 mb-0 ls-tight">マンション一覧</h1>
                            <span class="text-muted small">査定条件＞設定＞マンション指定から設定</span>
                        </div>
                    </div>
                    <div class="card-header"><h5>表示中のエリア</h5></div>
                    <span class="cap-errormsg-right" id="errorDisplayArea" name="errorDisplayArea"></span>
                    <div class="card-body" id="DisplayCityData"></div>
                </div>
                <div id="displayArea" class="row row-cols-1 row-cols-md-3 g-4">
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static" id="aeramodal" tabindex="-1"
                 aria-labelledby="aeramodalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="aeramodalLabel">表示エリア選択</h5>
                            <button type="button" class="btn-close d-none" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
                            <button type="button" class="btn btn-primary">確定</button>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        @Html.Partial("~/Views/Shared/_r_footer.cshtml")
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/r_asmc_ms_list_sh")
}

                                </div>
                                <div class="modal-body text-danger">
                                    <div class="py-5">
                                        <div class="box-footer container">
                                            <div>
                                                <label class="form-label" for="txtMsgTitle">チャット用メッセージ保存名</label><span class="cap-errormsg-right" id="error_txtMsgTitle"></span>
                                                <input type="text" id="txtMsgTitle" class="form-control form-control-lg mb-3" maxlength="100" />

                                                <label class="form-label" for="txtMsgContent">チャット用メッセージ内容</label><span class="cap-errormsg-right" id="error_txtMsgContent"></span>
                                            </div>
                                            <div class="input-group align-middle">
                                                <textarea class="form-control custom-control" rows="5" id="txtMsgContent" maxlength="1000"></textarea>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal"
                                            data-bs-target="#menu-modal">
                                        戻る
                                    </button>
                                    <button type="button" class="btn btn-primary" id="btnInsert">送信</button>

                                </div>
                            </div>
                        </div>
                    </div>*@
</main>

            @Html.Partial("~/Views/Shared/_r_footer.cshtml")
        </div>
    </div>
</form>
@section Scripts{
    @Scripts.Render("~/bundles/r_temp_mes")
}
                                </section>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnClear" class="btn btn-lg btn-primary">破棄</button>
                                <button type="button" class="btn btn-lg btn-secondary" data-bs-dismiss="modal">閉じる</button>
                            </div>
                        </div>
                    </div>
                </div>


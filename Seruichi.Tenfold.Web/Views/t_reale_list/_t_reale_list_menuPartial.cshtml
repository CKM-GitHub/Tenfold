<form id="form1">
    <div id="sidebar-wrapper">
        <ul class="navbar-nav mb-md-4 p-3 mt-5 p-md-0">
            <li>
                <div class="ls-wider px-xl-3" href="#">

                </div>
            </li>
            <li>
                <div class="text-center px-xl-3">
                    <div class="mb-3 text-start">
                        <label for="PrefNameSelect" class="form-label">所在地</label> 
                        <select id="PrefNameSelect" class="form-select">
                            <option selected value="00">全国</option>
                            @foreach (Models.DropDownListItem item in ViewBag.PrefDropDownListItems)
                            {
                                <option class="js-selectable" value=@item.Value>@item.DisplayText</option>
                            }
                            </select>
                    </div>
                    <div class="mb-3 text-start">
                        <label for="realEstateCompany" class="form-label">不動産会社</label>
                        <span class="cap-errormsg-bottom" id="errorRealEstate"></span>
                        <input type="text" class="form-control mb-2" id="txtrealEstateCompany" name="realEstateCompany" placeholder="不動産会社CD、不動産会社">
                    </div>
                </div>
            </li>
            <li>
                <div class="text-center px-xl-3">
                    <div class="mb-3 text-start">
                        <label for="disabledSelect" class="form-label">会員状態</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="chkEffective" name="chkEffective"
                                   checked> <label class="form-check-label" for="defaultCheck1"> 有効会員 </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="chkInvalid" name="chkInvalid"
                                   checked> <label class="form-check-label" for="defaultCheck1"> 無効会員 </label>
                        </div>
                    </div>
                </div>
            </li>

            <li>
                <div class="form-group ps-3 pe-3 px-xl-3 pt-3">
                    <button type="button"
                            class="btn btn-primary w-100 w-100 mb-3" id="btnDisplay">
                        表示
                    </button>
                </div>
                <div class="form-group ps-3 pe-3">
                    <button type="button"
                            class="btn btn-primary w-100 w-100" id="btnCSV">
                        CSVダウンロード
                    </button>
                </div>
            </li>
            <hr class="navbar-divider my-5 opacity-20">
            <li>
                <div class="form-group ps-3 pe-3">
                    <button type="button" class="btn btn-primary w-100 mb-3" id="btnSignUp">新規登録 </button>
                </div>
            </li>
        </ul>
        <div class="mt-auto pb-20"></div>
    </div>
</form>

<div class="toggle-button">
    <a href="#menu-toggle" class="btn" id="menu-toggle">
        <span class="fa fa-angle-right glyphicon-chevron-right" aria-hidden="true"></span>
    </a>
</div>
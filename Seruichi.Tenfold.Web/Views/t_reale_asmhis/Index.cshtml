@model Models.Tenfold.t_reale_asmhis.t_reale_asmhisModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_t_menuLayout.cshtml";
}

@section styles{
    @Styles.Render("~/Content/tenfold_css_common")
}
    <div class="d-flex flex-column min-vh-100 bg-surface-secondary mt-18" id="wrapper">
        <form id="form1">
            <div id="sidebar-wrapper">
                <ul class="navbar-nav mb-md-4 p-3 mt-5 p-md-0">
                    <li>
                        <div class="ls-wider px-xl-3" href="#">

                        </div>
                    </li>
                    <li>
                        <div class="text-center px-xl-3">
                            <div class="mb-3 text-start">
                                <div class="mb-3 text-start">
                                    <label for="disabledSelect" class="form-label">査定種類</label>
                                    <span class="cap-errormsg-right" id="CheckBoxError" name="CheckBoxError"></span>
                                    <div class="form-check"> <input class="form-areamansion form-check-input" type="checkbox" value="" id="Chk_Area" checked=""> <label class="form-check-label" for="Chk_Area"> <span class="ms-1 ps-1 pe-1 rounded-circle bg-primary text-white">エ</span> エリア</label> </div>

                                    <div class="form-check"> <input class="form-areamansion form-check-input" type="checkbox" value="" id="Chk_Mansion" checked=""> <label class="form-check-label" for="Chk_Mansion"> <span class="ms-1 ps-1 pe-1 rounded-circle bg-warning txt-dark">マ</span> マンション</label> </div>


                                </div>
                            </div>

                        </div>
                    </li>
                    <li>
                        <div class="text-center px-xl-3">
                            <div class="mb-3 text-start">
                                <div class="mb-3 text-start">
                                    <label for="disabledSelect" class="form-label">その他</label>
                                    <div class="form-check"> <input class="form-check-input" type="checkbox" value="" id="Chk_SendCustomer" checked=""> <label class="form-check-label" for="Chk_SendCustomer"> <span class="ms-1 ps-1 pe-1 rounded-circle bg-danger text-white">送</span> 送客</label> </div>

                                    <div class="form-check"> <input class="form-check-input" type="checkbox" value="" id="Chk_Top5" checked=""> <label class="form-check-label" for="Chk_Top5">TOP5</label> </div>
                                    <div class="form-check"> <input class="form-check-input" type="checkbox" value="" id="Chk_Top5Out" checked=""> <label class="form-check-label" for="Chk_Top5Out">TOP5以外</label> </div>
                                    <div class="form-check"> <input class="form-check-input" type="checkbox" value="" id="Chk_NonMemberSeller" checked=""> <label class="form-check-label" for="Chk_NonMemberSeller">非会員売主</label> </div>

                                </div>
                            </div>

                        </div>
                    </li>
                    <li>
                        <div class="text-center px-xl-3">
                            <div class="mb-3 text-start">
                                <label for="disabledSelect" class="form-label">範囲指定</label>
                                <select id="ddlRange" name="ddlRange" class="form-select mb-2">
                                    @*<select id="disabledSelect" class="form-select mb-2">*@
                                    <option>登録日</option>
                                    <option>簡易査定日</option>
                                    <option>詳細査定日</option>
                                    <option>買取依頼日</option>
                                    <option>送客日</option>
                                </select>

                                <label for="StartDate" class="form-label">開始日</label>
                                <span class="cap-errormsg-right" id="errorStartDate"></span>
                                <input class="form-control mb-2" id="StartDate" name="StartDate" type="date">
                                <label for="EndDate" class="form-label">終了日</label>
                                <span class="cap-errormsg-right" id="errorEndDate"></span>
                                <input class="form-control mb-2" id="EndDate" name="EndDate" type="date">
                                <div class="row mb-3">
                                    <div class="col-6"> <button type="button" id="btnToday" name="btnToday" class="btn btn-primary w-100">今日</button></div>
                                    <div class="col-6"><button type="button" id="btnThisWeek" name="btnThisWeek" class="btn btn-primary w-100">今週</button></div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6"><button type="button" id="btnThisMonth" name="btnThisMonth" class="btn btn-primary w-100">今月</button></div>
                                    <div class="col-6"><button type="button" id="btnLastMonth" name="btnLastMonth" class="btn btn-primary w-100">先月</button></div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li>
                        <div class="form-group ps-3 pe-3">
                            <button type="button" id="btnDisplay" class="btn btn-primary w-100 w-100 mb-3">表示</button>
                        </div>
                        <div class="form-group ps-3 pe-3">
                            <button type="button" id="btnCSV" class="btn btn-primary w-100 w-100 mb-3">CSVダウンロード</button>
                        </div>
                    </li>

                </ul>
                <div class="mt-auto pb-20"></div>
            </div>
        </form>
        <div class="toggle-button" name="left_side_NavigationBar_ShowHide_Icon">
            <a href="#menu-toggle" class="btn" id="menu-toggle">
                <span class="fa fa-angle-right glyphicon-chevron-right" aria-hidden="true"></span>
            </a>
        </div>
        <div class="d-flex flex-column min-h-screen bg-surface-secondary" id="page-content-wrapper">
            <main class="py-6 bg-surface-secondary">
                <div class="container-fluid">
                    @Html.Partial("t_reale_Info")

                    <div class="card shadow border-0 mb-7" style="border-top-left-radius: unset;border-top-right-radius: unset;">
                        <div class="card-header d-md-inline-flex">
                            <h5 class="mb-0">査定履歴</h5>
                            <span class="ps-md-5 text-muted text-sm" id="total_record_up"></span> <span style="color: red;" class="ps-md-5 text-sm" id="no_record"></span>
                        </div>
                        <div class="table-responsive">
                            <table id="tblPurchaseDetails" class="table table-hover table-nowrap">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col" class="text-decoration-underline sort-by" ordercol-index="0_6_1" style="width: 100px">種類</th>
                                        <th scope="col" style="width: 100px" class="text-decoration-underline sort-by" ordercol-index="1">査定ID</th>
                                        <th scope="col" style="width: 200px" class="text-decoration-underline sort-by" ordercol-index="2_6_1">物件（マンション、部屋番号）</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="3_6_1">売主名</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="4_6_1">登録日時</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="5_6_1">簡易査定日時</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="6_1">詳細査定日時</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="7_1">買取依頼日時</th>
                                        <th scope="col" style="width: 150px" class="text-decoration-underline sort-by" ordercol-index="8_6_1">送客日時</th>
                                        <th scope="col" style="width: 50px" class="text-end text-decoration-underline sort-by" ordercol-index="9_6_1">ランキング</th>
                                        @*<th scope="col" style="width: auto" class=""></th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer border-0 py-5">
                            <span class="text-muted text-sm" id="total_record"></span>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        @Html.Partial("t_reale_Modal")
        @Html.Partial("_t_footer")
        @Html.Partial("_ErrorPopup")
    </div>
                @section Scripts{
                    @Scripts.Render("~/bundles/t_reale_asmhis")
                }

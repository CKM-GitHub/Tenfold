@{
    Layout = "~/Views/Shared/t_seller_mansion/_t_seller_mansionLayout.cshtml";
}
@section styles{
    @Styles.Render("~/Content/tenfold_css_common")
}
<style>
    .p_tag {
        float: left;
    }
</style>

 <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                
                <div class="card shadow border-0 mb-7">
                  
                    <div class="card-header">
                      
                        <div class="col-md-12 col-12 mb-3 mb-sm-0 d-flex">
                          
                         <h1 class="h2 mb-0 ls-tight">物件(部屋)</h1>
                          <span class="ps-2 text-muted small align-self-end">管理</span>
                        </div>
                        <hr class="navbar-divider my-5 opacity-20"><div class="d-inline-flex">
                  <h5 class="mb-0">物件(部屋)査定一覧</h5> <span class="ps-md-5 text-muted text-sm" id="total_record_up"></span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-nowrap sortMe" id="mansiontable">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="text-end text-decoration-underline sort-by" style="width:100px" data-type="number">No.</th>
                            <th scope="col" style="width: 100px" class="text-decoration-underline sort-status">ステータス</th>
                            <th scope="col" style="width: 100px" class="text-decoration-underline sort-by">物件CD</th>
                            <th scope="col" style="width: 300px;" class="text-decoration-underline"><p id="a_apartment" class="p_tag">マンション名/</p><p id="p_address" class="p_tag">住所</p></th>
                            <th scope="col" style="width: 100px" class="text-decoration-underline sort-by">部屋番号</th>
                            <th scope="col" style="width: 100px" class="text-decoration-underline text-end sort-by" data-type="number">階数(階)</th>
                            <th scope="col" style="width: 100px" class="text-decoration-underline text-end sort-by" data-type="number">面積(㎡)</th>
                            <th scope="col" style="width: 300px" class="text-decoration-underline sort-mix-td-and-a">売主名</th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-by">登録日時</th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-mix-td-and-a">詳細査定日時</th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-by">買取依頼日時</th>
                            <th scope="col" style="min-width: 130px; width: 180px" class="text-decoration-underline"><p id="a_mansion" class="p_tag">マンション  Top1/</p><p id="p_mansionamount" class="p_tag">金額</p></th>
                            <th scope="col" style="min-width: 110px; width: 180px " class="text-decoration-underline"><p id="a_area" class="p_tag">エリア Top1/</p><p id="p_areaamount" class="p_tag">金額</p></th>
                            <th scope="col" style="min-width: 110px; width: 180px " class="text-decoration-underline"><p id="a_prcompany" class="p_tag">買取依頼会社/</p><p id="p_prcompanyamount" class="p_tag">金額</p></th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-by">送客日時</th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-by">成約日時</th>
                            <th scope="col" style="width: 180px" class="text-decoration-underline sort-by">辞退日時</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="card-footer border-0 py-5">
                <span class="text-muted text-sm" id="total_record">検索結果：999999件</span>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    @Scripts.Render("~/bundles/t_seller_mansion")
}

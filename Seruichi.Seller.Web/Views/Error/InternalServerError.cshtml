@{
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
}

<header class="text-center text-white masthead cap-header">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto position-relative">
                <h1 class="mb-2"><strong>500&nbsp;</strong>Internal Server Error<br></h1>
            </div>
        </div>
    </div>
</header>
<section class="cap-main">
    <div class="container w-100 h-100">
        <div class="col">
            <div class="row">
                <div class="col text-center"><i class="fa fa-server w-100 cap-error-icon pt-5 pb-3"></i></div>
            </div>
            <div class="row">
                <div class="col">
                    <h3 class="cap-error-title text-center">サーバー内部エラーです。<br></h3>
                    <p class="lead shadow-none text-center cap-error-p"><strong>申し訳ございませんが、</strong>しばらくしてから<strong>もう一度</strong>お試しください。</p>
                </div>
            </div>
        </div>
    </div>
</section>

@model Models.a_mypage_taikaiModel
@{
    ViewBag.Title = "査定 - セルイチ";
}

@section styles{
    @Styles.Render("~/Content/css/a_mypage_taikai")
}

<header class="text-center text-white masthead cap-header">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto position-relative">
                <h1 class="mb-2">マイページ</h1>
            </div>
        </div>
    </div>
</header>

<section class="clean-block clean-form dark h-100 cap-main">
    <div class="container-fluid" id="wrapper">
        <div class="pt-5 pb-3">
            @Html.Partial("_MyPageMenu")
            <div class="card cap-form">
                <form action="index.html" method="post" enctype="multipart/form-data" role="form">
                    <h4 style="text-align: center;padding-top: 50px;"><strong>退会</strong><br></h4>
                    <hr>
                    <div class="m-auto cap-fon-form-w600">
                        <div class="row">
                            <div class="col-12 col-md-2">
                                <div class="card">
                                    <div class="card-body h-auto">
                                        <h6 class="card-title">現在</h6>
                                        <p>残り</p>
                                        <h3 class="card-title text-center" id="currentValue">@ViewBag.PossibleTime</h3>
                                        <p class="text-end">件</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-10">
                                <div class="card">
                                    <div class="card-body" style="min-height: 190px;">
                                        <p>退会すると、査定履歴、利用可能物件枠などがすべて削除されます。</p>

                                        <hr>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="formCheck-1"><label class="form-check-label" for="formCheck-1">
                                                セルイチを退会します。
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="card">
                            <div class="card-body">
                                <div class="text-center">
                                    <div class="d-inline-flex">
                                        <button class="btn btn-primary btn-lg" type="button" data-bs-target="#modal-taikaicheck"
                                                data-bs-toggle="modal">
                                            退会する
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static" role="dialog" tabindex="-1"
         id="modal-taikaicheck">
        <div class="modal-dialog modal modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">退会確認</h4><button type="button" class="btn-close d-none"
                                                             data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <section class="newsletter-subscribe">
                        <h4 class="text-center align-self-center pt-2 pb-2">本当に退会しますか？</h4>
                    </section>
                </div>
                <div class="modal-footer justify-content-center text-center">
                    <div class="text-nowrap d-md-inline-flex justify-content-center w-100">
                        <button class="btn btn-light btn-lg m-2" type="button">いいえ</button> <button class="btn btn-primary btn-lg m-2" type="button" data-bs-target="#modal-taikaiok"
                                                                                                    data-bs-toggle="modal">
                            はい
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static" role="dialog" tabindex="-1"
         id="modal-taikaiok">
        <div class="modal-dialog modal modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">退会完了</h4><button type="button" class="btn-close d-none"
                                                             data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <section class="newsletter-subscribe">
                        <h4 class="text-center align-self-center pt-2 pb-2">退会しました。</h4>
                    </section>
                </div>
                <div class="modal-footer justify-content-center text-center">
                    <div class="text-nowrap d-md-inline-flex justify-content-center w-100">
                        <button class="btn btn-primary btn-lg m-2" type="button">
                            ログアウト
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    @Scripts.Render("~/bundles/a_mypage_taikai")

}
